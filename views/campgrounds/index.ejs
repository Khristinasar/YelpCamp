<% include ../partials/header %> <!-- two dots because index and other files are in another directory -->

<div class="container">
    <header class="jumbotron">
        <div class="container"> <!--we add another <div class="container", so header will be responsive when we make the window smaller-->
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>
    

    <div class="row">
        <div class="col-lg-12"> <!--to take all the space -->
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;"> <!--To put pics on a line together, so there are no gaps-->
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6"> <!--to make it responsive -->
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %> 
    </div>
</div>

<% include ../partials/footer %>